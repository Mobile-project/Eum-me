<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.eum_me.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/record_fragment_containter">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/voice_recorder_microphone"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/btn_book_mark"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/btn_record"
            android:layout_alignBottom="@id/btn_record"
            android:src="@drawable/black_gallon"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/btn_pause"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitXY"
            android:layout_toLeftOf="@+id/btn_record"
            android:layout_alignBottom="@id/btn_record"
            android:src="@drawable/pause_button"
            android:background="@android:color/transparent"/>

    </RelativeLayout>
</LinearLayout>
