<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/the_speaker_grill">

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:textSize="60sp" />
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_marginTop="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/chronometer"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_play" />


        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chronometer"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Tab the button to start recording"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <!--<TextView-->
            <!--android:id="@+id/counter"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/name"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:text="getItemCount로 받기 "-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Small" />-->

        <ImageView
            android:id="@+id/options"
            android:layout_width="@dimen/design_fab_size_mini"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="-50dp"
            android:layout_toEndOf="@+id/btn_record"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:paddingRight="10dp"
            android:src="@drawable/ic_more_vert_white_24dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/memo_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/playlist"
        android:background="#D5D4EA"
        android:gravity="top"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:inputType="textMultiLine|text" />

</LinearLayout>