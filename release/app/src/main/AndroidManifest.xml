<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rel.ljw.eummerelease">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET"/>




    <application
        android:allowBackup="true"
        android:icon="@drawable/cow"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity android:name=".View.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity android:name=".View.GoogleSignInActivity"/>
        <activity android:name=".View.BaseActivity"/>
        <activity android:name=".View.ListView"/>
        <activity android:name=".View.ModifyActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".View.PlayActivity"/>
        <service android:name=".Model.RecordeService"/>
        <activity android:name=".View.ListViewFirebase"/>

    </application>


</manifest>